# Sample terraform.tfvars for foundry_standard
# Adjust values before running `terraform plan`.

# Azure region (keep aligned with model availability & dependent resource quotas)
location = "eastus2"

# Use null to create a new resource group or supply an existing RG resource ID:
# resource_group_resource_id = "/subscriptions/<sub-id>/resourceGroups/<existing-rg>"
resource_group_resource_id = null

# AI Foundry SKU
sku = "S0"

# Enable AVM telemetry (set to false only if org policy requires)
enable_telemetry = true

# Standard tagging for governance & cost allocation
tags = {
  environment         = "dev"
  owner               = "team-ai"
  cost_center         = "cc-1234"
  project             = "foundry-standard"
  data_classification = "internal"
}

# Unified projects collection.
# Default behavior (if omitted) provisions a single default project.
# Below shows multi-project configuration. Ensure unique project_name values.
projects = [
  {
    project_name         = "default-project" # Retains backward-compatible default
    project_display_name = "Default Project"
    project_description  = "Default Project description"
  },
  {
    project_name         = "analytics"
    project_display_name = "Analytics Project"
    project_description  = "Project for analytics workloads"
  },
  {
    project_name         = "experimentation"
    project_display_name = "Experimentation Project"
    project_description  = "Rapid prototyping space"
  }
]

# To deploy NO projects (advanced): set projects = []
# To deploy ONLY default: remove extra objects or remove whole projects block.

# Optional override of model deployments. If omitted (or set to null) defaults to
# [gpt-4o, gpt-4o-mini, text_embedding_3_large]. Uncomment and customize as needed.
# Each object supports optional sku { name, capacity } if you need higher capacity.
# Note: Use currently available model versions. Future-dated versions will fail deployment.
model_deployments = [
  {
    name    = "gpt-4o"
    version = "2024-11-20"
    format  = "OpenAI"
    sku = {
      name     = "GlobalStandard"
      capacity = 2
    }
  },
  {
    name    = "gpt-4o-mini"
    version = "2024-07-18"
    format  = "OpenAI"
  },
  {
    name    = "text-embedding-3-large"
    version = "1"
    format  = "OpenAI"
  }
]

